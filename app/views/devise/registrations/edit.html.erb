<div class="col-sm-offset-2 col-sm-10">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
    <%= devise_error_messages! %>
      <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">  Email
        </label><i>(leave blank if you don't want to change it) </i><br />
        <div class="col-sm-10">
          <%= f.email_field :email, autofocus: true %>
        </div>
      </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %>
      </div>
    <% end %>
    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">  Password</label><i>(leave blank if you don't want to change it)</i><br />
      <div class="col-sm-10">
          <%= f.password_field :password, autocomplete: "off" %>
      </div>
    </div>
    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">password_confirmation</label>
      <div class="col-sm-10">
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
    </div>
    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">current_password</label><i>(we need your current password to confirm your changes)</i><br />
      <div class="col-sm-10">
        <%= f.password_field :current_password, autocomplete: "off" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Update"  %>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <h3>Cancel my account</h3>
      Unhappy? <br /><br /> <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %><br />
      <%= link_to "Back", :back, :class=>"btn btn-primary btn-lg active" %>
    </div>
  </div>
</div>